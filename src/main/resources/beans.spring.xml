<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<bean id="idCreatorDao" class="com.akkafun.platform.id.IdCreatorDao" init-method="init" >
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="idGenerator" class="com.akkafun.platform.id.IdGenerator" >
		<property name="idCreatorDao" ref="idCreatorDao"/>
	</bean>
	
	<bean id="sessionProvider" class="com.akkafun.platform.common.web.session.HttpSessionProvider" />
	
</beans>